
@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (ViewBag.mess == "Error")
{

    <div class="toast" data-delay="1000" style="position:fixed; top: 100PX; left: 10PX;z-index: 2000;width: 300px">
        <script>
            swal({
                title: 'Hai mật khẩu không trùng khớp',
                /* text: 'Redirecting...', */
                icon: 'error',
                timer: 3000,
                buttons: true,
                type: 'error'
            })
        </script>
    </div>
}
<section class="blog-wrap-layout9">
    <div class="container">
        <div class="section-heading-3">
            <h2>Đổi mật khẩu</h2>
        </div>
        <div class="row gutters-50">
            <div class="col-lg-4">
            </div>
            <div class="col-lg-4">
                <div class="single-blog-box-layout1">
                    <div class="blog-form">
                        <div class="section-heading-4 heading-dark">
                        </div>
                        <form class="contact-form-box" action="/Authentication/UpdatePassword" method="post">
                            <input type="hidden" value="@ViewBag.IdUser" name="idUser" />
                            <div class="row gutters-15">
                                <div class="col-md-12 form-group">
                                    <input type="password" placeholder="Nhập mật khẩu mới" class="form-control" name="password" required="">
                                </div>
                                <div class="col-md-12 form-group">
                                    <input type="password" placeholder="Nhập lại mật khẩu mới" class="form-control" name="rePassword" required="">
                                </div>
                                <div class="col-12 form-group">
                                    <button type="submit" class="item-btn">Xác nhận</button>
                                </div>
                            </div>
                            <div class="form-response"></div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
            </div>
        </div>
    </div>
</section>

