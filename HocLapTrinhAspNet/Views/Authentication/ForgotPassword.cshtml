
@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Navbar & Hero End -->
<!-- Contact Start -->
@if (ViewBag.mess == "Success")
{
    <div class="toast" data-delay="1000" style="position:fixed; top: 100PX; left: 40PX;z-index: 2000;width: 300px">

        <script>
            swal({
                title: 'Vui lòng kiểm tra Email!',
                /* text: 'Redirecting...', */
                icon: 'success',
                timer: 3000,
                buttons: true,
                type: 'success'
            })
        </script>
    </div>
}

@if (ViewBag.mess == "ErrorExist")
{

    <div class="toast" data-delay="1000" style="position:fixed; top: 100PX; left: 10PX;z-index: 2000;width: 300px">
        <script>
            swal({
                title: 'Tên người dùng đã tồn tại!',
                /* text: 'Redirecting...', */
                icon: 'error',
                timer: 3000,
                buttons: true,
                type: 'success'
            })
        </script>
    </div>
}
@if (ViewBag.mess == "ErrorPassword")
{

    <div class="toast" data-delay="1000" style="position:fixed; top: 100PX; left: 10PX;z-index: 2000;width: 300px">
        <script>
            swal({
                title: 'Hai mật khẩu không trùng khớp',
                /* text: 'Redirecting...', */
                icon: 'error',
                timer: 3000,
                buttons: true,
                type: 'success'
            })
        </script>
    </div>
}

@if (ViewBag.mess == "Error")
{

    <div class="toast" data-delay="1000" style="position:fixed; top: 100PX; left: 10PX;z-index: 2000;width: 300px">
        <script>
            swal({
                title: 'Email không tồn tại trong hệ thống',
                /* text: 'Redirecting...', */
                icon: 'error',
                timer: 3000,
                buttons: true,
                type: 'error'
            })
        </script>
    </div>
}
<section class="blog-wrap-layout9">
    <div class="container">
        <div class="section-heading-3">
            <h2>Quên mật khẩu</h2>
        </div>
        <div class="row gutters-50">
            <div class="col-lg-4">
            </div>
            <div class="col-lg-4">
                <div class="single-blog-box-layout1">
                    <div class="blog-form">
                        <div class="section-heading-4 heading-dark">
                            <h3 class="item-heading">Nhập Email để lấy lại mật khẩu</h3>
                        </div>
                        <form class="contact-form-box" action="/Authentication/RePassword" method="post">
                            <div class="row gutters-15">
                                <div class="col-md-12 form-group">
                                    <input type="email" placeholder="Email" class="form-control" name="email" required="">
                                </div>
                                <div class="col-12 form-group">
                                    <button type="submit" class="item-btn">Xác nhận</button>
                                </div>
                            </div>
                            <div class="form-response"></div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
            </div>
        </div>
    </div>
</section>
